{
  "id": "ALAS2023-2024-680",
  "title": "Amazon Linux 2023 - ALAS2023-2024-680: Important priority package update for bind",
  "issued": {
    "date": "2024-08-01 04:06:00"
  },
  "updated": {
    "date": "2024-08-06 15:00:00"
